<?xml version="1.0" encoding="utf-8"?>
<GridLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_gravity="fill_vertical"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:background="@android:color/holo_blue_bright"
        android:scaleType="fitXY"
        android:id="@+id/couleurFournit" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_rowSpan="2"
        android:id="@+id/planLigneFond"
        android:contentDescription="@string/planLigne"
        android:scaleType="fitXY"
        android:layout_gravity="fill"
        android:layout_column="1"
        android:layout_row="0"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/planLignePoint"
        android:contentDescription="@string/planLigne"
        android:scaleType="fitCenter"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="fill"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nb_validations"
        android:text="0"
        android:layout_gravity="top|right|end"
        android:layout_column="3"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/nom_gare"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_row="0"
        android:layout_column="2"
        android:text="Gare"
        android:layout_width="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_tampon"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:text="DerniÃ¨re validation : il y a 2 minutes" />

    <TextView
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_column="4"
        android:layout_gravity="fill_vertical"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:background="@android:color/holo_blue_bright"
        android:scaleType="fitXY"
        android:id="@+id/couleurNecessite" />

</GridLayout>